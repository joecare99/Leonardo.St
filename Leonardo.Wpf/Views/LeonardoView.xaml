<Page
    x:Class="Leonardo.Views.LeonardoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Leonardo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LeonardoView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <DockPanel>
        <StackPanel
            HorizontalAlignment="Center"
            DockPanel.Dock="Bottom"
            Orientation="Horizontal">
            <Button Command="{Binding EncodeCommand}" Content="New" />
            <Button Command="{Binding DecodeCommand}" Content="Crack" />
            <Button Command="{Binding GenerateCommand}" Content="Gen" />
        </StackPanel>
        <TextBlock
            x:Name="txtMessage"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding MessageText}" />
    </DockPanel>
</Page>
